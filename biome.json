{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      "src-tauri/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "ignore": ["node_modules", "routeTree.gen.ts"],
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
          "noSvgWithoutTitle": "off",
          "useKeyWithClickEvents": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
        "lineWidth": 90,
        "bracketSpacing": true,
        "quoteStyle": "double",
        "semicolons": "asNeeded",
        "trailingCommas": "none",
        "jsxQuoteStyle": "double",
        "arrowParentheses": "always"
    }
  }
}
